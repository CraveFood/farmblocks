  "author": "Crave Food Services and AUTHORS",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "babel-jest": "^21.0.2",
    "babel-preset-es2040": "^1.1.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "commitizen": "^2.9.6",
    "copy": "^0.3.1",
    "cz-lerna-changelog": "^1.2.1",
    "flow-bin": "^0.55.0",
    "flow-remove-types": "^1.2.1",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lerna": "^2.2.0",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.0",
    "react-test-renderer": "^16.0.0-rc.3",
    "unflowify": "^1.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
