{
  "name": "farmblocks",
  "version": "0.1.0",
  "description": "A collection of user interface blocks",
  "author": "Crave Food Services and AUTHORS",
  "license": "MIT",
  "main": "index.js",
  "private": true,
  "scripts": {
    "lint.staged": "lint-staged",
    "test": "jest",
    "typecheck": "flow",
    "lint": "eslint -c .eslintrc.js --ignore-path .eslintignore",
    "lint.test":
      "eslint -c .test.eslintrc.js  --ignore-path .test.eslintignore",
    "coverage":
      "yarn test --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "commit": "git-cz",
    "prepush": "yarn typecheck",
    "storybook": "start-storybook -p 6006 -s .storybook/assets",
    "build-storybook": "build-storybook -o docs"
  },
  "workspaces": ["packages/*"],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "babel": {
    "plugins": ["transform-class-properties"],
    "presets": ["flow", "env", "react"]
  },
  "lint-staged": {
    "*.js": ["yarn lint --quiet"],
    "*.test.js": ["yarn lint.test"],
    "*.{js,json,css}": ["prettier --parser flow --write"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CraveFood/farmblocks.git"
  },
  "devDependencies": {
    "@crave/farmblocks-tooltip": "^0.2.0-alpha.e320de4a",
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-info": "^3.2.12",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/addon-storyshots": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cz-lerna-changelog": "^1.2.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.1",
    "eslint": "^4.8.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.56.0",
    "flow-typed": "^2.1.5",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.0",
    "lerna": "^2.3.1",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "16",
    "styled-components": "^2.2.1"
  }
}
