{
  "name": "farmblocks",
  "version": "0.1.0",
  "description": "A collection of user interface blocks",
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn typecheck",
    "commit": "git-cz",
    "typecheck": "flow",
    "test": "jest"
  },
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CraveFood/farmblocks.git"
  },
  "author": "Crave Food Services and AUTHORS",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.11",
    "@storybook/addon-info": "^3.2.11",
    "@storybook/addon-links": "^3.2.10",
    "@storybook/addon-storyshots": "^3.2.11",
    "@storybook/react": "^3.2.11",
    "babel-cli": "^6.26.0",
    "babel-preset-react": "^7.0.0-beta.2",
    "commitizen": "^2.9.6",
    "copy": "^0.3.1",
    "cz-lerna-changelog": "^1.2.1",
    "flow-bin": "^0.55.0",
    "flow-typed": "^2.1.5",
    "husky": "^0.14.3",
    "jest": "^21.1.0",
    "lerna": "^2.2.0",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.0",
    "react": "^16.0.0-rc.3",
    "react-dom": "^16.0.0-rc.3",
    "react-test-renderer": "^16.0.0",
    "styled-components": "^2.1.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "babel": {
    "presets": ["flow", "env", "react"]
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --parser flow --write", "git add"]
  }
}
