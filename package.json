{
  "name": "farmblocks",
  "version": "0.1.0",
  "description": "A collection of user interface blocks",
  "scripts": {
    "precommit": "lint-staged",
    "commit": "git-cz"
  },
  "private": true,
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CraveFood/farmblocks.git"
  },
  "author": "Crave Food Services and AUTHORS",
  "license": "MIT",
  "workspaces": ["packages/*"],
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-lerna-changelog": "^1.2.1",
    "husky": "^0.14.3",
    "lerna": "^2.2.0",
    "lint-staged": "^4.2.3",
    "prettier": "^1.7.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "lint-staged": {
    "*.{js,json,css}": ["prettier --write", "git add"]
  }
}
